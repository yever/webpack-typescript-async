{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2016",
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "baseUrl": ".",
        "lib": [
            "dom",
            "es6"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "webpack-env",
            "systemjs"
        ],
        "noLib": false
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
